<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd"

    default-init-method="init">


    <context:component-scan base-package="ru.alive"/>
    <!--<context:property-placeholder />-->
    <context:annotation-config />


    <bean id="propertyConfigurer" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:*.properties</value>
            </list>
        </property>
    </bean>



    <bean id="controlPanel" class="ru.alive.env.visual.ControlPanel">
        <constructor-arg ref="environment"/>
        <constructor-arg ref="environmentVisualisation"/>
    </bean>

    <bean id="window" class="ru.alive.env.visual.Window">
        <constructor-arg ref="environmentVisualisation"/>
        <constructor-arg ref="controlPanel"/>
    </bean>

    <bean id="environmentVisualisation" class="ru.alive.env.visual.EnvironmentVisualisation">
        <constructor-arg ref="environment"/>
        <constructor-arg ref="creatureVisualisationHolder"/>
    </bean>



    <!-- Mongo -->

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
    	<constructor-arg name="mongo" ref="mongo"/>
    	<constructor-arg name="databaseName" value="memory"/>
    	<!--<constructor-arg name="defaultCollectionName" value="HelloMongo"/>-->
    </bean>

    <bean id="mongo" class="org.springframework.data.mongodb.core.MongoFactoryBean">
    	<property name="host" value="127.0.0.1"/>
        <property name="port" value="27017"/>
    </bean>

	<bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>

</beans>