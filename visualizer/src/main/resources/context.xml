<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd"

    default-init-method="init">


    <context:component-scan base-package="ru.alive"/>



    <bean id="controlPanel" class="ru.alive.env.visual.ControlPanel">
        <constructor-arg ref="environment"/>
        <constructor-arg ref="environmentVisualisation"/>
    </bean>

    <bean id="window" class="ru.alive.env.visual.Window">
        <constructor-arg ref="environmentVisualisation"/>
        <constructor-arg ref="controlPanel"/>
    </bean>

    <bean id="environmentVisualisation" class="ru.alive.env.visual.EnvironmentVisualisation">
        <constructor-arg ref="environment"/>
        <constructor-arg ref="creatureVisualisationHolder"/>
    </bean>
</beans>